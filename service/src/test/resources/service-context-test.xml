<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="namedParameterJdbcTemplate" class="org.springframework.jdbc.core.namedparam.NamedParameterJdbcTemplate">
        <constructor-arg ref="dataSource"/>
    </bean>

    <bean id="apartmentDao" class="com.punko.dao.jdbc.ApartmentDaoJdbc">
        <constructor-arg ref="namedParameterJdbcTemplate" />
    </bean>

    <bean id="apartmentDtoDao" class="com.punko.dao.jdbc.ApartmentDtoDaoJdbc">
        <constructor-arg ref="namedParameterJdbcTemplate" />
    </bean>

    <bean id="apartmentService" class="com.punko.service.ApartmentServiceImp">
        <constructor-arg name="apartmentDao" ref="apartmentDao"/>
    </bean>

    <bean id="apartmentDtoService" class="com.punko.service.ApartmentDtoServiceImpl">
        <constructor-arg name="apartmentDaoDto" ref="apartmentDtoDao"/>
    </bean>


    <bean id="residentDao" class="com.punko.dao.jdbc.ResidentDaoJdbc">
        <constructor-arg ref="namedParameterJdbcTemplate" />
    </bean>


</beans>